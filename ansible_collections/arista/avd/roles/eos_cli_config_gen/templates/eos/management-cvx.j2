{# Management CVX #}
{% if management_cvx is arista.avd.defined %}
!
management cvx
   no shutdown
{%     if management_cvx.server_hosts is arista.avd.defined %}
{%         for server_host in management_cvx.server_hosts |arista.avd.natural_sort() %}
   server host {{ server_host }}
{%         endfor %}
{%     endif %}
{%     if management_cvx.source_interface is arista.avd.defined %}
   source-interface {{ management_cvx.source_interface }}
{%     endif %}
{%     if management_cvx.heartbeat_interval is arista.avd.defined %}
   heartbeat-interval {{ management_cvx.heartbeat_interval }}
{%     endif %}
{%     if management_cvx.heartbeat_timeout is arista.avd.defined %}
   heartbeat-timeout {{ management_cvx.heartbeat_timeout }}
{%     endif %}
{%     if management_cvx.vrf is arista.avd.defined %}
   vrf  {{ management_cvx.vrf }}
{%     endif %}
{% endif %}